<mapper namespace="com.codeReading.busi.dal.iface.source.ISourceProjectStatisticsDao">
	
	<sql id="column"> projectid,annotationcount,watchcount,modtime,intime </sql>
	
	<sql id="key_where"> where projectid=#{projectid} </sql>

	<!-- 查询 -->
